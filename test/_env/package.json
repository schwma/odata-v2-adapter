{
  "name": "@cap-js-community/odata-v2-adapter-test",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cds-serve --in-memory",
    "start:file": "cds-serve --profile testdb",
    "start:root": "cds-serve --in-memory --service test.MainService --from ./test/_env/srv/model --at /",
    "test:deploy": "cds deploy srv/index.cds --to sqlite:test.sqlite --no-save",
    "build": "cds build",
    "tsc": "cd util/typescript && tsc"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^4.7.4"
  },
  "cds": {
    "odata": {
      "-structs": true
    },
    "cov2ap": {
      "caseInsensitive": true,
      "fixDraftRequests": true
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": ":memory:"
        },
        "[testdb]": {
          "kind": "sqlite",
          "credentials": {
            "database": "test.sqlite"
          }
        }
      }
    }
  }
}
